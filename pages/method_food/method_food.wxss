/* pages/method_food/method_food.wxss */
.health_item{
  display: flex;
  height:240rpx;
  padding: 10rpx;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  box-shadow: 4rpx 1rpx 1rpx #86ff9c;
}

.health_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
image{
  width: 100%;
  max-height:200rpx;
  border-radius:10rpx;
}

.health_info_wrap{
  flex:3;
  display: flex;
  flex-direction: column;
}

.health_title{
  display: -webkit-box;
  width: 100%;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  font-weight: bold;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  padding-left: 15rpx;
  padding-top: 15rpx;
}

.health_views{
  color: #696969;
  font-size: 32rpx;
  display: -webkit-box;
  width: 100%;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  padding-left: 15rpx;
  padding-top: 15rpx;
  margin-bottom: 15rpx;
}

.boldtext{
  font-weight: bold !important;
}
.text{
  margin-top: 15rpx;
}
