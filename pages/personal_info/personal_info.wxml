<!--pages/personal_info/personal_info.wxml-->
<i-panel title="修改用户信息" class="page">
    <i-row class="row">
      <i-col span="6" i-class="col-class" class="col">
        <view class="title">用户名</view>
      </i-col>
      <i-col span="18" i-class="col-class">
        <i-input value="{{user.name}}"  disabled placeholder="名字" />
      </i-col>
    </i-row>
    <i-row class="row">
      <i-col span="6" i-class="col-class" class="col">
        <view class="title">头像</view>
      </i-col>
      <i-col span="18" i-class="col-class">
        <view class="image"
              bind:tap="imageClick">
          <image src="{{image}}" />
        </view>
      </i-col>
    </i-row>
    <i-row class="row">
      <i-col span="6" i-class="col-class" class="col">
        <view class="title">性别</view>
      </i-col>
      <i-col span="18" i-class="col-class">
        <view class="sex,col">
          <radio-group current="{{sex}}" bindchange="handleSexChange">
              <label class="radio" >
                  <radio value="0"/>男
              </label>
              <label class="radio" >
                  <radio value="1"/>女
              </label>
          </radio-group>
        </view>
      </i-col>
    </i-row>
    <i-row class="row">
      <i-col span="6" i-class="col-class" class="col">
        <view class="title">手机</view>
      </i-col>
      <i-col span="18" i-class="col-class">
        <i-input value="{{phone}}" type="number" placeholder="输入电话号码" />
      </i-col>
    </i-row>
    <i-row class="row">
      <i-col span="6" i-class="col-class" class="col">
        <view class="title">星座</view>
      </i-col>
      <i-col span="18" i-class="col-class">
        <i-input value="{{constellation}}" placeholder="输入星座（固定格式XX座）" />
      </i-col>
    </i-row>
    <i-row class="row">
      <i-col span="6" i-class="col-class" class="col">
        <view class="title">邮箱</view>
      </i-col>
      <i-col span="18" i-class="col-class">
        <i-input value="{{email}}" placeholder="输入邮箱" />
      </i-col>
    </i-row>
    <i-row class="row">
      <i-col span="24" i-class="col-class">
        <button bindtap="updateuser" class="btn">修改</button>
      </i-col>
    </i-row>

</i-panel>
