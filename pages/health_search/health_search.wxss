/* pages/search/search.wxss */
.search{
  margin-top: 10rpx;
}

.item_item{
  display: flex;
  height:240rpx;
  padding: 15rpx;
  box-shadow: 4rpx 1rpx 1rpx #86ff9c;
}

.item_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
image{
  width: 100%;
  max-height:200rpx;
  border-radius:10rpx;
}

.item_info_wrap{
  flex:3;
  display: flex;
  flex-direction: column;
}

.item_name{
  display: -webkit-box;
  width: 100%;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  font-weight: bold;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding-left: 10px;
}

.item_funs{
  color: #696969;
  font-size: 32rpx;
  display: -webkit-box;
  width: 100%;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  padding-left: 15rpx;
  padding-top: 15rpx;
  margin-bottom: 15rpx;
}