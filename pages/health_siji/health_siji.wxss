.health_item{
  display: flex;
  border-bottom: 1rpx solid #86ff9c;
}

.health_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
image{
  width: 100%;
  padding:10rpx;
  border-radius:10rpx;
}

.health_info_wrap{
  flex:3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.health_title{
  display: -webkit-box;
  width: 100%;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  font-weight: bold;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.health_time{
  color: var(--themeColor);
  font-size: 32rpx;
  text-align: left;
  padding-left: 10px;
}

.health_views{
  color: var(--themeColor);
  font-size: 32rpx;
  text-align: right;
  padding-right: 10px;
}