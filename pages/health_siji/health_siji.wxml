<!--节气养生模块-->
<Tabs tabs="{{tabs}}" bindItemChange="handleItemChange">
  <block wx:if="{{tabs[0].isActive}}">
    <view class="first_tb">
      <navigator class="health_item" wx:for="{{sijiList}}" wx:index="{{id}}">
        <!--左侧图片-->
        <view class="health_img_wrap">
          <image mode="widthFix" src="{{item.image}}"></image>
        </view>
        <!--右侧的标题-->
        <view class="health_info_wrap">
          <view class="health_title">{{item.title}}</view>
          <view class="health_time">{{item.editTime}}</view>
          <view class="health_views">{{item.views}}</view>
        </view>
      </navigator>
    </view>
  </block>
